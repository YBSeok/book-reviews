---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { ChevronLeft } from 'lucide-preact';
---

<aside
  id="main-sidebar"
  class="fixed top-0 left-0 z-50 h-full w-64 -translate-x-full transform bg-white shadow-xl transition-transform duration-300 ease-in-out"
  aria-hidden="true"
>
  <nav class="flex h-full flex-col">
    <h2 class="mb-8">
      <button
        id="sidebar-close-btn"
        aria-label="메뉴 닫기"
        class="text-gray-900 hover:text-[color:var(--color-main-600)]"
      >
        <ChevronLeft client:load class="h-6 w-6" />
      </button>
      <a href="/" class="text-mt-1 text-main-600 transition duration-150">
        {SITE_TITLE}
      </a>
    </h2>

    <div class="flex flex-grow flex-col space-y-2">
      <HeaderLink href="/" class="sidebar-link">Home</HeaderLink>
      <HeaderLink href="/blog" class="sidebar-link">Shelf</HeaderLink>
      <HeaderLink href="/about" class="sidebar-link">About</HeaderLink>
    </div>

    <div class="social-links mt-auto border-t border-gray-100 pt-6">
      <a
        href="https://github.com/ybseok"
        target="_blank"
        class="rounded-lg p-2 text-gray-500 transition duration-150 hover:text-[color:var(--color-main-600)]"
      >
        <span class="sr-only">YBSeok's GitHub</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
          <path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path>
        </svg>
      </a>
    </div>
  </nav>
</aside>

<style>
  .sidebar-link {
    padding: 0.75rem 0.5rem;
    border-radius: 0.375rem;
    text-decoration: none;
    color: var(--black);
    font-weight: 500;
  }

  .sidebar-link.active {
    background-color: var(--color-main-100);
    color: var(--color-main-800);
    border-left: 4px solid var(--color-main-500);
    padding-left: 0.25rem;
  }

  .sidebar-link:not(.active):hover {
    background-color: var(--color-main-100);
  }
</style>
